<div class="bg">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<div class="auth-form-login">
					<div class="auth-logo">
						<img src="images/mc-logo.png" alt="Image" class="block-center img-rounded">
						<h4 style="color: #ffffff;">CHOOSE YOUR PASSWORD</h4>
					</div>
					<form id="loginForm" class="auth-form auth-form-reset" {{action "reset" on="submit"}}>
						<div class="form-group">
							<input type="password" class="form-control" id="password" placeholder="Password">
						</div>
						<div class="form-group">
							<input type="password" class="form-control" id="password_confirm" placeholder="Confirm Password">
						</div>

						<div class="form-group">
							<input type="hidden" class="form-control" id="token" value="{{token}}">
						</div>

						<button type="submit" style="margin-top: 15px;" class="btn btn-raised btn-warning btn-block">RESET PASSWORD</button>
					</form>
				</div>
			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
</div>
