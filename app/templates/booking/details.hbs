            <div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-raised btn-defult" {{action "followupFeedback" booking.id}}>Feedback Follow UP</button>
              </div>
              <div class="btn-group" role="group">
