          {{booking-feedback-detailed}} {{else if (if_eq booking.stage "closed")}}
          <div class="clearfix" style="margin-bottom: 10px; margin-right: 24px; margin-left: 24px;">
            <div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
              <div class="btn-group" role="group">
                <a class="btn btn-raised btn-defult" href="http://demo-api.menucloud.io/api/v1/booking/{{booking.id}}/print" target="_blank">Print</a>
