            <div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-raised btn-info" {{action "close" booking.id}}>Close</button>
              </div>
              <div class="btn-group" role="group">
                <a class="btn btn-raised btn-defult" href="http://demo-api.menucloud.io/api/v1/booking/{{booking.id}}/print" target="_blank">Print</a>
              </div>
            </div>
          </div>
          {{booking-confirmed-detailed}} {{else if (if_eq booking.stage "feedback")}}
