              {{textarea-autosize rows=1 id="menu-title" value=menu.title class='form-control menu-title-input' type='text'}}
            </div>
            <div class="form-group menu-item">
              {{textarea-autosize rows=1 id="menu-description" placeholder="DESCRIPTION" value=menu.description class='form-control input-sub-header' type='text'}}
